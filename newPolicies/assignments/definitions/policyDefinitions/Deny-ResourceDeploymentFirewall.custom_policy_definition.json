{
    "name": "Deny-AzureFirewall",
    "properties": {
        "description": "Prevents the deployment of Azure Firewall resources.",
        "displayName": "Azure Firewall must not be deployed",
        "metadata": {
            "category": "Network",
            "version": "1.0.0"
        },
        "mode": "Indexed",
        "parameters": {
            "effect": {
                "allowedValues": [
                    "Audit",
                    "Disabled",
                    "Deny"
                ],
                "defaultValue": "Deny",
                "metadata": {
                    "description": "Enable or disable enforcement of the policy.",
                    "displayName": "Effect"
                },
                "type": "String"
            }
        },
        "policyRule": {
            "if": {
                "field": "type",
                "equals": "Microsoft.Network/azureFirewalls"
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        },
        "policyType": "Custom"
    },
    "type": "Microsoft.Authorization/policyDefinitions"
}

