{
  "type": "Microsoft.Authorization/policyDefinitions",
  "apiVersion": "2020-09-01",
  "name": "Config-flexibleServerPrivateDNS",
  "scope": null,
  "properties": {
    "displayName": "Configure Private DNS for Flexible Server",
    "description": "This policy links Flexible Server private DNS zones to hub the network",
    "mode": "Indexed",
    "metadata": {
      "version": "1.0.0",
      "category": "Network"
    },
    "parameters": {
      "virtualNetworkResourceId": {
        "metadata": {
          "description": "Resource Id of a VNet to link. The format must be: '/subscriptions/{subscription id}/resourceGroups/{resourceGroup name}/providers/Microsoft.Network/virtualNetworks/{virtual network name}",
          "displayName": "VNet Resource ID"
        },
        "type": "String"
      },
      "parentDnsNamespace": {
        "metadata": {
          "description": "The parent DNS Namespace. E.g. postgres.database.azure.com, mysql.database.azure.com",
          "displayName": "Parent DNS Namespace"
        },
        "type": "String"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/privateDnsZones"
          },
          {
            "field": "name",
            "equals": "[concat(subscription().subscriptionId,'.', parameters('parentDnsNamespace'))]"
          }
        ]
      },
      "then": {
        "effect": "deployIfNotExists",
        "details": {
          "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b12aa53e-6015-4669-85d0-8515ebb3ae7f"
          ],
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.Network/privateDnsZones/virtualNetworkLinks/virtualNetwork.id",
                "equals": "[parameters('virtualNetworkResourceId')]"
              }
            ]
          },
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "virtualNetworkResourceId": {
                    "type": "string"
                  },
                  "privateDnsZoneName": {
                    "type": "string"
                  },
                  "location": {
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "name": "[concat(parameters('privateDnsZoneName'), '/via_policy')]",
                    "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
                    "apiVersion": "2020-06-01",
                    "location": "[parameters('location')]",
                    "properties": {
                      "registrationEnabled": false,
                      "virtualNetwork": {
                        "id": "[parameters('virtualNetworkResourceId')]"
                      }
                    }
                  }
                ]
              },
              "parameters": {
                "virtualNetworkResourceId": {
                  "value": "[parameters('virtualNetworkResourceId')]"
                },
                "privateDnsZoneName": {
                  "value": "[field('name')]"
                },
                "location": {
                  "value": "[field('location')]"
                }
              }
            }
          }
        }
      }
    }
  }
}