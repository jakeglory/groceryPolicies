{
    "name": "AddOrReplace-Storage-ContainerSoftDelete",
    "type": "Microsoft.Authorization/policyDefinitions",
    "apiVersion": "2020-09-01",
    "scope": null,
    "properties": {
        "policyType": "Custom",
        "displayName": "Enable soft-delete on containers",
        "description": "Enalbe soft-delete on containers at storage account creation.",
        "mode": "Indexed",
        "metadata": {
            "version": "1.0.0",
            "category": "Storage"
        },
        "parameters": {},
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Storage/storageAccounts/blobServices"
                    },
                    {
                        "not": {
                            "field": "Microsoft.Storage/storageAccounts/blobServices/containerDeleteRetentionPolicy.enabled",
                            "equals": true
                        }
                    }
                ]
            },
            "then": {
                "effect": "modify",
                "details": {
                    "roleDefinitionIds": [
                        "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                    ],
                    "operations": [
                        {
                            "operation": "addOrReplace",
                            "field": "Microsoft.Storage/storageAccounts/blobServices/containerDeleteRetentionPolicy",
                            "value": {
                                "enabled": true,
                                "days": 7
                            }
                        }
                    ]
                }
            }
        }
    }
}